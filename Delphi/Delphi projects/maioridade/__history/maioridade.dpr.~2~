program maioridade;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

var age : integer;

begin
  try
    Write ('qual a sua idade? ');
    try
      Readln (age);
    except
      Writeln ('idade invalida');
    end;

    if age >= 18 then begin
      Writeln ('Você é de maior!');
    end else begin
      Writeln ('Você é de menor!');
    end;

    Readln;

  except
    on E: Exception do
      Writeln(E.ClassName, ': ', E.Message);
  end;
end.
